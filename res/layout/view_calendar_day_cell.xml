<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/style_calendar_cell" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtCellGregorian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	    style="@style/style_calendar_cell_gregorian"
	    android:text="@string/string_demo" />

        <ImageView
            android:id="@+id/imgCellHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_calendar_border"
            android:contentDescription="@string/desc_cell_hint"
            android:src="@drawable/img_cell_blank" />

    </FrameLayout>

    <TextView
        android:id="@+id/txtCellLunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	style="@style/style_calendar_cell_lunar"
        android:text=" " />

</LinearLayout>
